          +vertical-menu-item
            +vertical-menu-text Постоянные
          +vertical-menu-item
            +vertical-menu-text Оплаты детально
      +inner-sidebar-item
        +button()(href='#')._green._uppercase._align_center Создать отчет

    +e.content
      +actions-header
        +actions-header-col
          +select([{title: 'Стандартный вид', value: 1}, {title: 'Стандартный вид 1', value: 2}])
        +actions-header-col._flexible
          //- TODO заменить на datepicker
          +search-bar('тест')._white.__search-bar
        +actions-header-col
          +icon-button('icon-export')(href='#')._uppercase Экспорт
        +actions-header-col
          +icon-button('icon-arrow-rotate')(href='#')

      +table
        +table-header
          +table-header-col('Начало')._width_140
            +table-filter-button 9-1
          +table-header-col('Конец')._width_140
            +table-filter-button._orange 9-1
          +table-header-col('Длительность')._width_180
            +table-filter-button 9-1
          +table-header-col('Устройство')._width_180
            +table-filter-button Все
          +table-header-col('Код ошибки')._width_160
            +table-filter-button Все
          +table-header-col('Описание ошибки')._flexible

        - for (var i = 0; i < 15; i++)
          +table-row
            +table-row._main
              +table-col._width_140
                +table-text-block
                  +table-text 28.04.2017
                  +table-text 13:34:32
              +table-col._width_140
                +table-text-block
                  +table-text 28.04.2017
                  +table-text 13:34:32
              +table-col._width_180
