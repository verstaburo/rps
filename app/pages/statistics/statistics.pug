block layout-right
  +header([{path: '#', title: 'Таблицы', active: true}, {path: '#', title: 'Графики'}])

  +b.statistics.page
    +inner-sidebar
      +inner-sidebar-item
        +inner-sidebar-heading Стандартные отчёты
        +vertical-menu._left_border.statistics__vertical-menu
          +vertical-menu-item._active
            +vertical-menu-text Журнал тревог
          +vertical-menu-item
            +vertical-menu-text Журнал действий опреатора
      +inner-sidebar-item
        +inner-sidebar-heading Ваши отчёты
        +vertical-menu._left_border.statistics__vertical-menu
          +vertical-menu-item
            +vertical-menu-text Транзакции
          +vertical-menu-item
            +vertical-menu-text Оплата и проезды по дням
          +vertical-menu-item
            +vertical-menu-text Ежемесячный  отчёт
          +vertical-menu-item
            +vertical-menu-text Распознование
          +vertical-menu-item
            +vertical-menu-text Оплаты за день
          +vertical-menu-item
            +vertical-menu-text Постоянные
          +vertical-menu-item
            +vertical-menu-text Оплаты детально
          +vertical-menu-item
            +vertical-menu-text Отчёты по кассам
