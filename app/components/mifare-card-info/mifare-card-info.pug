          +select([{title: 'Вне парковки', value: 1}, {title: 'Вне парковки 1', value: 2}])
      +field
        +field-label._align_right.mifare-card-info__label Время въезда
        +field-item.mifare-card-info__field
          +input(value='2016-11-20')
          +input(value='12:40').mifare-card-info__small
      +field
        +field-label._align_right.mifare-card-info__label Время пересчета
        +field-item.mifare-card-info__field
          +input(value='2016-11-20')
          +input(value='12:40').mifare-card-info__small
      +field
