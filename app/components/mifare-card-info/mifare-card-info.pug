          +select([{title: 'Тарифный план', value: 1}, {title: 'Тарифный план 1', value: 2}])
      +field
        +field-label._align_right.mifare-card-info__label Тарифная сетка
        +field-item.mifare-card-info__field
          +select([{title: 'Сетка Владимира', value: 1}, {title: 'Сетка Владимира 1', value: 2}])
      +field
        +field-label._align_right.mifare-card-info__label Сумма на карте
        +field-item.mifare-card-info__field
          +input(value='0.00')
      +field
        +field-label._align_right.mifare-card-info__label ТВП
        +field-item.mifare-card-info__field
          +input(value='2000-01-01')
          +input(value='00:00').mifare-card-info__small
      +field
        +field-label._align_right.mifare-card-info__label ТКВП
        +field-item.mifare-card-info__field
          +input(value='0')
